    "websocket",
    "ws",
    "esbuild",
    "node"
  ],
  "author": "Your Name <youremail@example.com>",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "esbuild": "^0.25.9"
  }
}